<section class="py-2">
    <div class="row">
        <div class="col-md-6 text-center">
            <h1 class="display-3 mt-3 pt-5">
                Pokedex Encyclopedia
            </h1><p class="lead">Learn Everything About Pokemon</p>
            <form action="/charge" method="POST">
                <script
                    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="{{stripePublishableKey}}"
                    data-amount="3500"
                    data-name="Pokedex Encyclopedia"
                    data-description="Guide to all Pokemon"
                    data-image="/img/marketplace.png"
                    data-locale="auto">
                    </script>
                    <script>
                    // Hide the default stripe button
                    document.getElementsByClassName('stripe-button-el')[0].style.display = 'none';
                </script>
            <button type="submit" class="btn btn-outline-dark text-white btn-lg">Purchase for $35!</button>
            </form>
        </div>
        <div class="col-md-6">
            <img src="/img/book.png" alt="" class="img-fluid">
        </div>
    </div>
</section>
